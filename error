stage('Check camPassportIds') {
  steps {
    script {
      if (env.DEVTEST_PASSPORT?.trim()) {
        echo "DevTest camPassportId found: ${env.DEVTEST_PASSPORT.take(15)}..."
      } else {
        error("DevTest camPassportId is empty!")
      }

      if (env.PROD_PASSPORT?.trim()) {
        echo "Prod camPassportId found: ${env.PROD_PASSPORT.take(15)}..."
      } else {
        error("Prod camPassportId is empty!")
      }
    }
  }
}
