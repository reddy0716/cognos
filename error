stage('Dummy Deploy from DevTest to Prod') {
  steps {
    container('python') {
      script {
        sh """
          cd MotioCI/api/CLI
          python3 ci-cli.py --server="${MOTIO_CI_URL}" deploy \
            --xauthtoken=${env.MOTIO_AUTH_TOKEN} \
            --sourceInstanceName="Cognos-DEV/TEST" \
            --targetInstanceName="Cognos-PRD" \
            --projectName="Demo" \
            --targetLabelName="DummyDeployLabel" \
            --searchPath "/content/folder[@name='Motio Samples']" \
            --camPassportId="${env.PROD_PASSPORT}"
        """
      }
    }
  }
}
